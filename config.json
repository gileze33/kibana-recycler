{
	"patterns": [{
		"host": "http://localhost:9200",
		"match": "log.dev-*",
		"window": 2
	}, {
		"match": "log.stg-*"
	}],

	"snapshotsEnabled": true,
	"repositoryId": "recycler",
	"repository": {
		"type": "fs",
	    "settings": {
	        "location": "/mount/backups/my_backup",
	        "compress": true
	    }
	}
}